<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F2F5F8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/btn_round_2"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
            <ImageView
                android:layout_margin="50dp"
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:src="@drawable/w_logo4" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="4">
            <TableRow
                android:layout_marginHorizontal="40dp">
                <TextView
                    android:drawableLeft="@drawable/ic_baseline_menu_24"
                    android:textSize="30dp"
                    android:padding="10dp"
                    android:text=" 내 정보 수정"
                    android:id="@+id/modify_text"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" />
            </TableRow>
            <TableRow
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:layout_marginHorizontal="40dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="현재 비밀번호"
                    android:textColor="@color/black" />
            </TableRow>
            <TableRow
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:layout_marginHorizontal="40dp">
                <EditText
                    android:background="@drawable/btn_round_gray"
                    android:padding="10dp"
                    android:id="@+id/m_pw"
                    android:inputType="textPassword"
                    android:textSize="20dp"
                    android:layout_weight="3" />
            </TableRow>
            <TableRow
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:layout_marginHorizontal="20dp">
                <Button
                    android:id="@+id/m_edit_btn"
                    android:textSize="20dp"
                    android:textColor="#fafafa"
                    android:paddingVertical="10dp"
                    android:background="@drawable/btn_round_blue"
                    android:text="완료"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>