<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/account"
        android:gravity="right"
        android:background="@drawable/btn_round_2"
        android:textColor="#fafafa"
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_weight="1"
        android:text="CREATE ACCOUNT"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TableLayout
        android:id="@+id/sign_table"
        android:paddingVertical="20dp"
        app:layout_constraintTop_toBottomOf="@id/account"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical">
        <TableRow
            android:layout_marginHorizontal="20dp">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textColor="@color/black" />
        </TableRow>>
        <TableRow
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp">
            <EditText
                android:background="@drawable/btn_round_gray"
                android:id="@+id/name"
                android:padding="5dp"
                android:layout_weight="3"/>
        </TableRow>

        <TableRow
            android:layout_marginHorizontal="20dp">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textColor="@color/black"/>
        </TableRow>
        <TableRow
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp">
            <EditText
                android:background="@drawable/btn_round_gray"
                android:padding="5dp"
                android:id="@+id/id_text"
                android:layout_weight="2"/>
            <Button
                android:id="@+id/chk_id_button"
                android:gravity="center"
                android:background="@drawable/btn_round_blue"
                android:textColor="#fefefe"
                android:text="중복확인"/>
        </TableRow>
        <TableRow
            android:layout_marginHorizontal="20dp">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="EMAIL"
                android:textColor="@color/black"/>
        </TableRow>
        <TableRow
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp">
            <EditText
                android:background="@drawable/btn_round_gray"
                android:id="@+id/EmailAddress"
                android:layout_weight="2"
                android:inputType="textEmailAddress"
                android:padding="5dp"/>
            <Button
                android:id="@+id/chk_email_button"
                android:gravity="center"
                android:background="@drawable/btn_round_blue"
                android:textColor="#fefefe"
                android:text="중복확인"/>
        </TableRow>
        <TableRow
            android:gravity="center"
            android:layout_marginHorizontal="20dp">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="휴대폰 번호"
                android:textColor="@color/black" />
        </TableRow>
        <TableRow
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp">
            <EditText
                android:background="@drawable/btn_round_gray"
                android:padding="5dp"
                android:id="@+id/editTextPhone"
                android:layout_weight="1"
                android:inputType="phone" />
            <Button
                android:id="@+id/chk_phone_button"
                android:gravity="center"
                android:background="@drawable/btn_round_blue"
                android:textColor="#fefefe"
                android:text="중복확인"/>
        </TableRow>
        <TableRow
            android:gravity="center"
            android:layout_marginHorizontal="20dp">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="생년월일"
                android:textColor="@color/black" />
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginHorizontal="20dp">

            <EditText
                android:background="@drawable/btn_round_gray"
                android:padding="5dp"
                android:id="@+id/editTextDate"
                android:layout_weight="3"
                android:hint="6자리"
                android:inputType="date" />
        </TableRow>
        <TableRow
            android:gravity="center"
            android:layout_marginHorizontal="20dp">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginHorizontal="20dp">
            <EditText
                android:background="@drawable/btn_round_gray"
                android:padding="5dp"
                android:layout_weight="1"
                android:id="@+id/TextPassword"
                android:inputType="textPassword" />
        </TableRow>
        <TableRow
            android:gravity="center"
            android:layout_marginHorizontal="20dp">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="비밀번호 확인"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginHorizontal="20dp">

            <EditText
                android:background="@drawable/btn_round_gray"
                android:padding="5dp"
                android:id="@+id/TextPassword2"
                android:layout_weight="1"
                android:inputType="textPassword" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginHorizontal="20dp">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="성별"
                android:gravity="center"
                android:textColor="@color/black" />

            <RadioGroup
                android:id="@+id/r_group"
                android:orientation="horizontal"
                android:layout_weight="2">

                <RadioButton
                    android:id="@+id/male"
                    android:text="남성"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp"/>

                <RadioButton
                    android:id="@+id/female"
                    android:text="여성"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/black" />
            </RadioGroup>
        </TableRow>
        <TableRow
            android:gravity="center"
            android:layout_marginHorizontal="20dp">
            <TextView
                android:text="MBTI"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black" />

        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginHorizontal="20dp">
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/textView5"
                android:layout_weight="1"
                android:gravity="center"
                android:text="E vs I"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/text_E"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black" />

            <SeekBar
                android:id="@+id/seekBar1"
                android:layout_weight="3" />

            <TextView
                android:id="@+id/text_I"
                android:gravity="center"
                android:text=""
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black" />
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/textView6"
                android:layout_weight="1"
                android:gravity="center"
                android:text="N vs S"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/text_N"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/black" />

            <SeekBar
                android:id="@+id/seekBar2"
                android:layout_weight="3" />

            <TextView
                android:id="@+id/text_S"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/black" />
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/textView7"
                android:layout_weight="1"
                android:gravity="center"
                android:text="F vs t"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/text_F"
                android:gravity="center"
                android:text=""
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black" />

            <SeekBar
                android:id="@+id/seekBar3"
                android:layout_weight="3"/>

            <TextView
                android:id="@+id/text_T"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/textView8"
                android:gravity="center"
                android:text="J vs P"
                android:layout_weight="1"
                android:textColor="@color/black" />

        </TableRow>
        <TableRow
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:id="@+id/text_J"
                android:gravity="center"
                android:text=""
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black" />

            <SeekBar
                android:id="@+id/seekBar4"
                android:layout_weight="3"/>

            <TextView
                android:id="@+id/text_P"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginHorizontal="30dp">
            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/submission"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_round_blue"
                android:elevation="10dp"
                android:textColor="#fefefe"
                android:text="완료"/>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>